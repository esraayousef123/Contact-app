<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact_information"
    android:background="#1B13"



    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        tools:src="@drawable/contact_avatarphoto"
        android:background="@drawable/photo_style"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        tools:text="Esraa yousef"
        android:textSize="30sp"
        android:padding="15dp"
        />
    <ImageView
        android:id="@+id/phone_numberr_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_margin="30dp"
        android:src="@drawable/phone_icon"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/numberFiled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/phone_numberr_icon"
        app:layout_constraintBottom_toBottomOf="@id/phone_numberr_icon"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/phone_numberr_icon"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/name"
        tools:text="01017779965"
        android:textSize="20sp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/details_style"/>
    <ImageView
        android:id="@+id/description_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/phone_numberr_icon"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_margin="35dp"
        android:src="@drawable/description"
        />
    <TextView
        android:id="@+id/description_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/description_icon"
        app:layout_constraintBottom_toBottomOf="@id/description_icon"
        app:layout_constraintTop_toBottomOf="@id/numberFiled"
        app:layout_constraintStart_toEndOf="@id/description_icon"
        app:layout_constraintStart_toStartOf="@id/numberFiled"
        app:layout_constraintEnd_toEndOf="@id/numberFiled"
        tools:text="01017779965"
        android:textSize="20sp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/details_style"/>






</androidx.constraintlayout.widget.ConstraintLayout>